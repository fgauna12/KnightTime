<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/gold" />
      <stroke
          android:width="1dp"
          android:color="@color/blue" />
      <corners
         android:radius="10dp"/>
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp"/>
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/light_yellow"
          android:endColor="@color/gold"
          android:angle="270"/>
      <corners
         android:radius="10dp"/>
      <stroke
          android:width="1dp"
          android:color="@color/light_yellow" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>